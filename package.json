{
  "name": "@node-ts/bus",
  "version": "0.0.1",
  "main": "index.js",
  "description": "A service bus for message-based, distributed node applications",
  "repository": "github:node-ts/bus.git",
  "author": "Andrew den Hertog <andrew.denhertog@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean && rm -r node_modules",
    "docs:dev": "vuepress dev",
    "docs:build": "vuepress build && cp .vuepress/google* docs",
    "docs:deploy": "./deploy-docs.sh",
    "lint": "lerna run lint",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "dotenv -e test.env -- jest --collect-coverage \"(src\\/.+\\.|/)spec\\.ts$\"",
    "test:unit:watch": "yarn run test:unit --watch",
    "test:integration": "dotenv -e test.env -- jest --runInBand \"bus-(sqs).*(src\\/.+\\.|/)integration\\.ts$\""
  },
  "keywords": [
    "typescript",
    "enterprise service bus",
    "distributed system",
    "message bus",
    "node"
  ],
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!node-ts.+).+\\.ts$"
    ],
    "coveragePathIgnorePatterns": [
      ".js",
      "/error/.*",
      "/test/.*"
    ],
    "testRegex": "(src\\/.+\\.|/)(integration|spec)\\.ts$",
    "testEnvironment": "node",
    "bail": true
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@node-ts/code-standards": "^0.0.10",
    "@types/jest": "^26.0.23",
    "dotenv-cli": "^4.0.0",
    "inversify": "^5.1.1",
    "jest": "^27.0.5",
    "lerna": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4",
    "vuepress": "^1.8.2",
    "vuepress-plugin-sitemap": "^2.3.1"
  }
}
